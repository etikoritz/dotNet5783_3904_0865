        </Grid.Background>
        <Label Content="order ID" HorizontalAlignment="Left" Margin="112,117,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="112,267,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="112,231,0,0" VerticalAlignment="Top" FontSize="16"/>
